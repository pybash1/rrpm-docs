---
const intro = await Astro.glob("../pages/introduction/*");
const cmds = await Astro.glob("../pages/commands/*");
const config = await Astro.glob("../pages/configuration/*");
const exts = await Astro.glob("../pages/extensions/*");
---

<aside class="border-r border-[#858494]/20">
    <div class="grid gap-y-16">
        <div>
            <div class="font-semibold text-2xl text-[#fff0ed]">Introduction</div>
            <div class="text-[#70868f] pt-4 font-thin grid">
                <a href="/" class={`px-8 py-4 border-l-2 ${Astro.url.pathname.toString() == "/" ? "text-[#fff0ed] border-white" : "border-[#858494]/50 text-[#70868f]"}`}>Getting Started</a>
                {intro.map((doc) => (
                    <a href={doc.url} class={`px-8 py-4 border-l-2 ${Astro.url.pathname.toString() == doc.url+"/" || Astro.url.pathname.toString() == doc.url ? "text-[#fff0ed] border-white" : "border-[#858494]/50 text-[#70868f]"}`}>{doc.frontmatter.title}</a>
                ))}
            </div>
        </div>
        <div>
            <div class="font-semibold text-2xl text-[#fff0ed]">Commands</div>
            <div class="text-[#70868f] pt-4 font-thin grid">
                {cmds.map((doc) => (
                    <a href={doc.url} class={`px-8 py-4 border-l-2 ${Astro.url.pathname.toString() == doc.url+"/" || Astro.url.pathname.toString() == doc.url ? "text-[#fff0ed] border-white" : "border-[#858494]/50 text-[#70868f]"}`}>{doc.frontmatter.title}</a>
                ))}
            </div>
        </div>
        <div>
            <div class="font-semibold text-2xl text-[#fff0ed]">Configuration</div>
            <div class="text-[#70868f] pt-4 font-thin grid">
                {config.map((doc) => (
                    <a href={doc.url} class={`px-8 py-4 border-l-2 ${Astro.url.pathname.toString() == doc.url+"/" || Astro.url.pathname.toString() == doc.url ? "text-[#fff0ed] border-white" : "border-[#858494]/50 text-[#70868f]"}`}>{doc.frontmatter.title}</a>
                ))}
            </div>
        </div>
        <div>
            <div class="font-semibold text-2xl text-[#fff0ed]">Extensions</div>
            <div class="text-[#70868f] pt-4 font-thin grid">
                {exts.map((doc) => (
                    <a href={doc.url} class={`px-8 py-4 border-l-2 ${Astro.url.pathname.toString() == doc.url+"/" || Astro.url.pathname.toString() == doc.url ? "text-[#fff0ed] border-white" : "border-[#858494]/50 text-[#70868f]"}`}>{doc.frontmatter.title}</a>
                ))}
            </div>
        </div>
    </div>
</aside>