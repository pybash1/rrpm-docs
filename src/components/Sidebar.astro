            <div class="text-[#70868f] pt-4 font-thin grid">
                <a href="/extension-manager" class={`px-8 py-4 border-l-2 ${active == 11 ? "text-[#fff0ed] border-white" : "border-[#858494]/50"}`}>Extension Manager</a>
                <a href="/marketplace" class={`px-8 py-4 border-l-2 ${active == 12 ? "text-[#fff0ed] border-white" : "border-[#858494]/50"}`}>Marketplace</a>
