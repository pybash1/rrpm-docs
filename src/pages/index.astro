---
import Sidebar from "../components/Sidebar.astro";
import RightSidebar from "../components/RightSidebar.astro";
import Layout from "../layouts/Layout.astro";
import Blockquote from "../components/Blockquote.astro";
import Code from "../components/Code.astro";
---

<Layout title="RRPM">
  <div class="px-10 py-36">
    <div class="flex items-center justify-between">
      <div>
        <div
          class="text-5xl font-['Sora'] font-semibold bg-clip-text bg-[url('https://id.worldcoin.org/images/iridescent.jpg')] text-transparent"
        >
          Manage your projects, the right way.
        </div>
        <div class="pt-8 px-1 text-2xl text-white/60">
          RRPM lets users manage their repositories and projects efficiently
          &amp; automatically, besides being a universal project scaffolding
          tool.
        </div>
        <div class="flex gap-4 pt-6">
          <a
            href="#"
            class="bg-gradient-to-r from-[#fff0ed] to-[#edecfc] px-6 py-3 rounded-2xl shadow-[0_0_16px] shadow-[#d2e7f7]/25 font-medium"
            >Get Started</a
          >
          <a
            href="https://github.com/rrpm-org/rrpm"
            class="flex flex-row items-center gap-2 bg-gradient-to-r from-[#e6cfcf]/20 to-[#cde0ec]/20 text-[#d7dae1] rounded-2xl px-6 py-3 font-medium"
          >
            View on GitHub
